<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_height="match_parent"
    tools:context=".BasicSyntax.BSDataType">

    <ImageView
        android:id="@+id/int_data_container"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="@+id/char_data_container"
        app:layout_constraintTop_toBottomOf="@+id/char_data_container"
        app:srcCompat="@drawable/int_data_container_empty">

    </ImageView>

    <TextView
        android:id="@+id/int_Data_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="101dp"
        android:text="Int"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/int_data_container"
        app:layout_constraintStart_toStartOf="@+id/int_data_container"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/float_data_container"
        android:layout_width="150dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="@+id/int_data_container"
        app:layout_constraintTop_toBottomOf="@+id/int_data_container"
        app:srcCompat="@drawable/float_data_container_empty" />

    <TextView
        android:id="@+id/float_Data_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="101dp"
        android:text="Float"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/float_data_container"
        app:layout_constraintStart_toStartOf="@+id/float_data_container"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/char_data_container"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/char_data_container_empty" />

    <TextView
        android:id="@+id/char_Data_Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="100dp"
        android:text="Char"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/char_data_container"
        app:layout_constraintStart_toStartOf="@+id/char_data_container"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/char_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="152dp"
        android:text="'A'"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/char_data_container"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/int_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="92dp"
        android:text="10"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/int_data_container"
        app:layout_constraintTop_toBottomOf="@+id/char_text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/float_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="92dp"
        android:text="12.5734"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/float_data_container"
        app:layout_constraintTop_toBottomOf="@+id/int_text"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/visualiseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:text="Visualise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/float_data_container" />





</androidx.constraintlayout.widget.ConstraintLayout>