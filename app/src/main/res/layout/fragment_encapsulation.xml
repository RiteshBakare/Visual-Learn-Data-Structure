<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OOP.OOPEncapsulation">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Encapsulation"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:text="Binding Data and Methods Together"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        />
    <ImageView
        android:id="@+id/iv_combine"
        android:layout_width="300dp"
        android:layout_height="250sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="250dp"
        android:src="@drawable/encapsulation_combine"
        android:visibility="invisible"
        tools:visibility="visible"
        />
    <ImageView
        android:id="@+id/iv_data"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/encapsulatino_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_simulate"
        android:layout_marginEnd="200sp"
        />
    <ImageView
        android:id="@+id/iv_methods"
        android:layout_width="200dp"
        android:layout_height="250sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/encapsulatino_methods"
        app:layout_constraintBottom_toTopOf="@id/btn_simulate"
        android:layout_marginStart="200dp"
        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_simulate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        android:elevation="22sp"
        app:cardElevation="22sp"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encapsulate Data and Methods"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>