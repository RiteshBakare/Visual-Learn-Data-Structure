<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DataStructure.DSStack">

    <ImageView
    android:id="@+id/stack_a"
    android:layout_width="200dp"
    android:layout_height="80dp"
    android:src="@drawable/stack_a"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/btn_push"
    android:layout_marginBottom="30sp"
    android:layout_marginStart="60sp"
    android:visibility="gone"
    tools:visibility="visible"
    />

    <ImageView
        android:id="@+id/stack_b"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/stack_b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stack_a"
        android:layout_marginBottom="2sp"
        android:layout_marginStart="60sp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/stack_c"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/stack_c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stack_b"
        android:layout_marginBottom="2sp"
        android:layout_marginStart="60sp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/stack_d"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/stack_d"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stack_c"
        android:layout_marginBottom="2sp"
        android:layout_marginStart="60sp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/stack_e"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/stack_e"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stack_d"
        android:layout_marginBottom="2sp"
        android:layout_marginStart="60sp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/stack_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_pop"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="40sp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_push"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="60sp"
        android:elevation="22sp"
        app:cardBackgroundColor="@color/dark_blue"
        app:cardElevation="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Push"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_pop"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:elevation="22sp"
        app:cardBackgroundColor="@color/dark_blue"
        app:cardElevation="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pop"
            android:textColor="@color/black"
            android:textSize="22sp" />

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>